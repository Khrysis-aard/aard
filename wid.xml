<plugin
   name="wid"
   author="Khrysis"
   id="16537fffd375971a606cc8c0"
   language="Lua"
   purpose="gets id number of primary and second weapon then saves to variables primaryweapon and secondweapon"
   save_state="y"
   date_written="2022-01-09 09:40:16"
   requires="5.07"
   version="1.0"
   >
<description trim="y">
<![CDATA[
=========================================================================================================
type wid help to show this help file

type won for alias to equip weapons

type woff for alias to remove weapons

type id (name of weapon) worn - while wearing the weapons to get the id numbers of newly equipped weapons
	This is for primaryweapon and secondweapon variables (makes won and woff work correctly)
=========================================================================================================
]]>
</description>

</plugin>


<!--  Triggers  -->

<triggers>
  <trigger
   enabled="y"
   expand_variables="y"
   match="| Worn       : Dual wielded                                       |"
   send_to="10"
   sequence="100"
  >
  <send>secondweapon @weaponid</send>
  </trigger>
  <trigger
   enabled="y"
   expand_variables="y"
   match="| Id         : *                                         |"
   send_to="12"
   sequence="100"
  >
  <send>SetVariable ("weaponid", "%1")</send>
  </trigger>
  <trigger
   enabled="y"
   expand_variables="y"
   match="| Worn       : Wielded                                            |"
   omit_from_output="y"
   send_to="10"
   sequence="100"
  >
  <send>primaryweapon @weaponid</send>
  </trigger>
</triggers>

<!--  Aliases  -->

<aliases>
  <alias
   script="OnHelp"
   match="wid help"
   enabled="y"
  >
  </alias>
</aliases>

<aliases>
  <alias
   match="woff"
   enabled="y"
   expand_variables="y"
   sequence="100"
  >
  <send>remove wielded
remove second</send>
  </alias>
  <alias
   match="won"
   enabled="y"
   expand_variables="y"
   sequence="100"
  >
  <send>wear @primaryweapon
dual @secondweapon</send>
  </alias>
  <alias
   match="secondweapon *"
   enabled="y"
   send_to="12"
   sequence="100"
  >
  <send>SetVariable ("secondweapon", "'%1'")
Note ("Secondweapon is now: %1")</send>
  </alias>
  <alias
   match="primaryweapon *"
   enabled="y"
   send_to="12"
   sequence="100"
  >
  <send>SetVariable ("primaryweapon", "'%1'")
Note ("Primaryweapon is now: %1")</send>
  </alias>
</aliases>

